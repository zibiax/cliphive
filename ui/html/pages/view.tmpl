{{define "title"}} Clip #{{.Clip.ID}}{{end}}

{{define "main"}} 
    {{with .Clip}}
    <div class='clip'>
        <div class='metadata'>
            <strong>{{.Title}}</strong>
            <span>#{{.ID}}</span>
        </div>
        {{ len nil }}
        <pre><code>{{.Content}}</code></pre>
        <div class='metadata'>
            <time>Created: {{.Created}}</time>
            <time>Expires: {{.Expires}}</time>
        </div>
    </div>
    {{end}}
{{end}}
